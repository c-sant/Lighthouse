@model SensorViewModel

@{
    ViewData["Title"] = "Formulário";
}

<script>

    function quitForm() {
        if(confirm("Todas as alterações não salvas serão perdidas. Deseja mesmo sair?"))
            location.href = "/Sensor/Index"
    }

</script>

<div class="card mx-5">
    <div class="card-header mx-2 text-center">
        <h3>@(ViewBag.Op == 'I'? "Cadastro de Sensor" : "Edição de Sensor" )</h3>
    </div>

    <div class="card-body justify-content-center mx-2">
        <form asp-action="Save" method="post">
            
            <!-- informações escondidas -->
            <input type="hidden" />

            <!-- Primeira row: Id do Broker + Range -->

            <div class="row justify-content-between mb-4">
                <div class="col-6">
                    <label for="BrokerId">Broker ID</label>
                    <input type="text" asp-for="BrokerId" class="form-control" />
                    <span asp-validation-for="BrokerId" class="small text-danger"></span>
                </div>

                <div class="col-6">
                    <label for="Range">Alcance</label>
                    <input type="text" asp-for="Range" class="form-control" />
                    <span asp-validation-for="Range" class="small text-danger"></span>
                </div>
            </div>

            <!-- Segunda Row: Latitude + Longitude -->

            <div class="row justify-content-between mb-4">
                <div class="col-6">
                    <label for="Latitude">Latitude</label>
                    <input type="text" asp-for="Latitude" class="form-control" placeholder="00.000000" />
                    <span asp-validation-for="Latitude" class="small text-danger"></span>
                </div>
                
                <div class="col-6">
                    <label for="Longitude">Longitude</label>
                    <input type="text" asp-for="Longitude" class="form-control" placeholder="000.000000" />
                    <span asp-validation-for="Longitude" class="small text-danger"></span>
                </div>
            </div>

            <!-- Botões -->

            <div class="mt-5 d-flex justify-content-around">
                <a class="btn btn-outline-secondary" href="javascript:quitForm()">Voltar</a>
                <input type="submit" class="btn btn-success" value="Salvar" />
            </div>

        </form>
    </div>
</div>